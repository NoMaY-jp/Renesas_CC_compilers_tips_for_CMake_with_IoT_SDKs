    {
      "name": "Renesas RX65N CC-RX",
      "configurationType": "RelWithDebInfo",
      "buildRoot": "${workspaceRoot}/build",
      "cmakeExecutable": "C:/Program Files/CMake/bin/cmake.exe",
      "cmakeToolchain": "${projectDir}/tools/cmake/toolchains/cc-rx.cmake",
      "generator": "Ninja",
