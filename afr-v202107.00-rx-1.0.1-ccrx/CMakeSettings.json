        {
          "AFR_TOOLCHAIN_PATH": "C:/Renesas/CS+/CC/CC-RX/V3.05.00/bin",
          "AFR_EXTERNAL_TOOLCHAIN_PATH": "C:/Renesas/e2studio64/SupportFiles/.eclipse/com.renesas.platform_733684649/Utilities/ccrx"
        }
      ],
      "variables": [
        {
          "name": "VENDOR",
          "value": "renesas"
        },
        {
          "name": "BOARD",
          "value": "rx65n-rsk"
        },
        {
          "name": "INTELLISENSE_HELPER_C_FLAGS",
          "value": "-std=c99 -I\"${env.AFR_TOOLCHAIN_PATH}/../include\" -include\"${workspaceRoot}/.vs/c_cpp_intellisense_helper.h\""
